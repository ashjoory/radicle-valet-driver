{
  "name": "ashjoory/radicle-valet-driver",
  "description": "Custom Valet driver for Bedrock/Radicle setup",
  "type": "library",
  "license": "MIT",
  "version": "1.0.4",
  "keywords": [
    "valet",
    "wordpress",
    "radicle",
    "bedrock",
    "driver"
  ],
  "autoload": {
    "files": [
      "src/LocalValetDriver.php"
    ]
  },
  "require": {
    "php": ">=8.0"
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"copy('vendor/ashjoory/radicle-valet-driver/src/LocalValetDriver.php', 'LocalValetDriver.php'); if (!file_exists('.gitignore') || !preg_match('/^LocalValetDriver\\.php$/m', file_get_contents('.gitignore'))) file_put_contents('.gitignore', PHP_EOL . 'LocalValetDriver.php', FILE_APPEND);\""
    ],
    "post-update-cmd": [
      "@php -r \"copy('vendor/ashjoory/radicle-valet-driver/src/LocalValetDriver.php', 'LocalValetDriver.php'); if (!file_exists('.gitignore') || !preg_match('/^LocalValetDriver\\.php$/m', file_get_contents('.gitignore'))) file_put_contents('.gitignore', PHP_EOL . 'LocalValetDriver.php', FILE_APPEND);\""
    ]
  }
}
